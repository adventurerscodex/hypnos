{
  "verbose": true,
  "clearMocks": true,
  "transform": {
    ".*": "babel-jest"
  },
  "moduleFileExtensions": [
    "js"
  ],
  "moduleDirectories": [
    "src",
    "node_modules"
  ],
  "modulePaths": [
    "src"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "./coverage",
  "mapCoverage": true,
  "notify": true,
  "roots": [
    "src/"
  ],
  "coverageThreshold": {
     "global": {
       "branches": 50,
       "functions": 50,
       "lines": 50,
       "statements": 50
     }
   }
}
